{% extends "::base.html.twig"%}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block left %}
    <div id="search-form">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}})}}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    </div>
    {{ parent() }}
{% endblock %}
{% block center %}
   <h3 class="header-center">Twoje kontakty</h3>
    <table class="table table-hover">
    {% for person in persons %}
        <tr>
            <td>
                <p>
                    {% if person.photo %}
                        <img class="user-icon img-circle" src="{{ asset('photos/')}}{{ person.photo }}">
                    {% else %}
                        <img class="user-icon" src="{{ asset('photos/user.png')}}">
                    {% endif %}
                    <a href="{{ path('user',{'id': person.id}) }}">{{ person.name }} {{ person.surname }}</a>
                </p>
            </td>
        </tr>
    {% endfor %}
    </table>
{%endblock%}
